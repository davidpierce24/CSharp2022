@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>What's good: @Context.Session.GetString("User")</h1>
    <h3>The current sum is: @Context.Session.GetInt32("Sum")</h3>
    <form action="setName" method="post">
        <label for="Name">Name</label>
        <input type="text" name="Name" class="form-control">
        <label for="Num">Add a Number</label>
        <input type="number" name="Num" class="form-control">
        <input type="submit" value="Press Me" class="btn btn-info">
    </form>
    <a href="/delete" class="btn btn-danger">Clear Session</a>
</div>
