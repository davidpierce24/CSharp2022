@{
    ViewData["Title"] = "Product Page";
}

<div class="text-center">
    <h1>@ViewBag.Product.Name</h1>
    <div class="row">
        <div class="col">
            <h3>Categories</h3>
            @foreach (Category c in ViewBag.Product.ProductCategories)
            {
                <p>@c.Name</p>
            }
        </div>
        <div class="col"></div>
    </div>
</div>