@{
    ViewData["Title"] = "Wedding Page";
}

<h1>@ViewBag.Wedding.Spouse1 and @ViewBag.Wedding.Spouse2's Wedding</h1>

<h3>Date: @ViewBag.Wedding.Date</h3>

<div class="row">
    <div class="col">
        <h3>Guests:
            @foreach (Connection c in ViewBag.Wedding.Attendees)
            {
                <p>@c.User.FirstName @c.User.LastName</p>
            } 
        </h3>
    </div>
    <div class="col">
        <iframe
            width="450"
            height="250"
            frameborder="0" style="border:0"
            referrerpolicy="no-referrer-when-downgrade"
            src="https://www.google.com/maps/embed/v1/place?key=@ViewBag.GoogleMaps&q=@ViewBag.Wedding.Address"
            allowfullscreen>
        </iframe>
    </div>
</div>

